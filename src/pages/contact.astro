---
import Layout from "../layouts/Layout.astro";

const email = "hayatonanba@gmail.com"; 
const twitter = "hayatonanba0228";       
const github = "hayatonanba";             
const twitterUrl = `https://x.com/hayatonanba0228`;
const githubUrl = `https://github.com/hayatonanba`;
---

<Layout>

  <main class="mx-auto max-w-5xl px-4 py-16 md:py-24">
    <h1 class="text-6xl md:text-8xl font-extrabold tracking-tight uppercase">CONTACT</h1>

    <section class="mt-12 md:mt-16 grid gap-12">
      <div>
        <div class="flex items-center gap-3 text-white/60">
          <svg viewBox="0 0 24 24" fill="none" class="h-6 w-6"><rect x="3" y="5" width="18" height="14" rx="2" stroke="currentColor" stroke-width="1.5"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          <span class="text-sm font-semibold tracking-wider uppercase">Mail</span>
        </div>
        <div class="mt-3 flex items-center gap-3">
          <a href={`mailto:${email}`} class="text-2xl md:text-3xl font-extrabold">{email}</a>
          <button id="copy-email" data-copy={email} type="button" class="text-white/60 hover:text-white transition" aria-label="Copy email">
            <svg viewBox="0 0 24 24" fill="none" class="h-5 w-5"><rect x="9" y="9" width="11" height="11" rx="2" stroke="currentColor" stroke-width="1.5"/><rect x="4" y="4" width="11" height="11" rx="2" stroke="currentColor" stroke-width="1.5"/></svg>
          </button>
          <span id="copied-badge" class="text-xs text-white/60 opacity-0 transition">Copied</span>
        </div>
      </div>

      <div>
        <div class="flex items-center gap-3 text-white/60">
          <svg viewBox="0 0 24 24" fill="none" class="h-6 w-6"><path d="M4 4l16 16M20 4L4 20" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
          <span class="text-sm font-semibold tracking-wider uppercase">X (Twitter)</span>
        </div>
        <div class="mt-3">
          <a href={twitterUrl} target="_blank" rel="noopener noreferrer" class="text-2xl md:text-3xl font-extrabold hover:underline">@{twitter}</a>
        </div>
      </div>

      <div>
        <div class="flex items-center gap-3 text-white/60">
          <svg viewBox="0 0 24 24" fill="none" class="h-6 w-6"><path d="M8 7l-5 5 5 5M16 7l5 5-5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          <span class="text-sm font-semibold tracking-wider uppercase">GitHub</span>
        </div>
        <div class="mt-3">
          <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="text-2xl md:text-3xl font-extrabold hover:underline">@{github}</a>
        </div>
      </div>
    </section>

    <p class="mt-16">
      <a href="/" class="text-white/80 underline hover:text-white">‚Üê Back to Home</a>
    </p>
  </main>

  <script is:inline>
    const btn = document.getElementById('copy-email');
    const badge = document.getElementById('copied-badge');
    btn?.addEventListener('click', async () => {
      const value = btn.getAttribute('data-copy') || '';
      try {
        await navigator.clipboard.writeText(value);
        badge?.classList.remove('opacity-0');
        setTimeout(() => badge?.classList.add('opacity-0'), 1200);
      } catch (e) {
        alert('Failed to copy');
      }
    });
  </script>
</Layout>
