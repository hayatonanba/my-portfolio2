---
interface Item {
  dateRange: string;
  title: string;
  location?: string;
  description?: string;
  href?: string;
  cta?: string;
}

const { items = [] } = Astro.props as { items: Item[] };
---

<ul class="mb-4 ml-4 divide-y divide-dashed border-l">
  {items.map((item, idx) => (
    <li class="relative pl-10 py-4" style="list-style: none;">
      <article class="rounded-xl border border-white/10 bg-white/5 p-5">
        <p class="text-xs uppercase tracking-wider text-white/50">{item.dateRange}</p>
        <h3 class="mt-1 text-xl font-semibold">{item.title}</h3>
        {item.location && <p class="text-white/60">{item.location}</p>}
        {item.description && <p class="mt-3 text-white/70">{item.description}</p>}

        {item.href && (
          <p class="mt-4">
            <a href={item.href} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white text-black px-3 py-1.5 text-sm hover:bg-white/90 transition">{item.cta ?? 'Link'}</a>
          </p>
        )}
      </article>

      {idx < items.length - 1 && (
        <div class="mt-6 border-t border-dashed border-white/15"></div>
      )}
    </li>
  ))}
</ul>

